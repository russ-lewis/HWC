part Sim1_AND
{
	public bit a,b;
	public bit out;

	out = a & b;
}

part Sim1_OR
{
	public bit a,b;
	public bit out;

	out = a | b;
}

part Sim1_NOT
{
	public bit in;
	public bit out;

	out = !in;
}

part Sim1_XOR
{
	public bit a,b;
	public bit out;

	out = a & ~b | ~a & b;
}

