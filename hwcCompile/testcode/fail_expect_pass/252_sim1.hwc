part Sim1_2sComplement
{
	public bit[32] in;
	public bit[32] out;

	subpart Sim1_ADD adder;
	adder.a = in;
	adder.b = 1;
	out = adder.out;
}

part Sim1_SUB
{
	public bit[32] a,b;
	public bit[32] out;

	subpart Sim1_2sComplement comp;
	subpart Sim1_ADD          adder;

	comp.in = b;

	adder.a = a;
	adder.b = comp.out;

	out = adder.sum;
}

